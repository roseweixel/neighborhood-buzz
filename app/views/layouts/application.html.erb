<!DOCTYPE html>
<html>
<head>
  <title>NeighborhoodBuzz</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
</head>
<body>
	<nav class="nav navbar-inverse navbar-fixed-top" roll="navigation">
    <div class="navbar-header">
      <%= link_to("Neighborhood Buzz", neighborhoods_path, class: "navbar-brand") %>
    </div>
    
    <ul class="nav navbar-nav">
      <% if session[:user_id] %>
        <li>
          <%= link_to("Hello #{@user.username}. See your favorites.", user_path(@user))  %>
        </li>
        <li>
          <%= link_to("Logout", logout_path) %>
        </li>
      <% end %>
    </ul>
    <div id="navbar" class="navbar-collapse collapse">
      <%= form_for(User.new, :html => {:class => "navbar-form navbar-right", :roll => "form"}) do |f| %>
        <div class="form-group">
          <%= f.text_field :username, placeholder: "username" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, placeholder: "email address" %>
        </div>
        <div class="form-group">
          <%= f.text_field :commute_address, placeholder: "where do you work?" %>
        </div>
        <%= f.submit "Sign Up", class: "btn btn-success" %>
      <% end %>
      <%= form_tag(sessions_path, :class => "navbar-form navbar-right", :roll => "form") do %>
        <div class="form-group">
          <input type="text" name="username" placeholder="username" />
        </div>
        <input class="btn btn-success" name="commit" type="submit" value="Sign In">

      <% end %>
    </div>
  </nav>



  <div class="container">

    <div id="alert">
        <% if flash[:notice] %>
           <div class="alert alert-warning"><%= flash[:notice] %></div>
        <% end %>
    </div>
		<%= yield %>

	</div>
</body>
</html>