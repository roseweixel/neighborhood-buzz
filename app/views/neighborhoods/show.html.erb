<h1><%= @neighborhood.name %></h1>
<div class="row">
	<div class="col-md-4">
		<h3>Typical Buying Price: <%= @neighborhood.find_50th_percentile %></h3>


		<h3>Sample 2 Bedroom Rental:</h3>

		<p>Monthly Rent: <%= @noko[:monthly_rent] %></p>
		<%= image_tag("#{@noko[:img_url]}") %><br>
		<%= link_to("View This Listing", @noko[:listing_url]) %><br>
		<%= link_to("More Listings", @noko[:search_url]) %>

	</div>

	<div class="col-md-4">
		<h3>Recommended Bars</h3>
		<ul>
			<% @neighborhood.get_yelp_top_three_bars.each do |bar| %>
				<h4><%= link_to bar[:name], bar[:url] %></h4>
				<%= image_tag("#{bar[:stars_img]}", height: "15", width: "75") %><br>
				<%= bar[:address] %><br>
			<% end %>
		</ul>
		<h3>Recommended Restaurants</h3>
		<ul>
			<% @neighborhood.get_yelp_top_three_restaurants.each do |restaurant| %>
				<h4><%= link_to restaurant[:name], restaurant[:url] %></h4>
				<%= image_tag("#{restaurant[:stars_img]}", height: "15", width: "75") %><br>
				<%= restaurant[:address] %><br>
			<% end %>
		</ul>

	</div>

	<div class="col-md-4">
		<h3>What People Are Saying About <%= @neighborhood.name %></h3>
		<a class="twitter-timeline" href="https://twitter.com/hashtag/<%=@neighborhood.twitterified_name%>" data-widget-id="535582004671434752"></a>
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
		</script>

	</div>
</div>




