	
		
		<div class="row">
		<% if user.neighborhoods.size > 0 %>
			<h3>Neighborhoods Similar in Price</h3>
			<% user.similar_to_favorites_by_price.each do |neighborhood| %>
				<div class="col-md-3" style='padding: 0; background-image: url("<%= image_url(neighborhood.user_favorite_photo_url)%>"); background-size: cover; background-position: center; background-repeat: no-repeat; height: 270px;'>
					<h4 style='color: black; background:rgba(55,55,55,.7); margin: 0; width: 100%; padding: 10px;'><%= link_to "#{neighborhood.name}, #{neighborhood.borough}", neighborhood_path(neighborhood) %></h4>
				</div>
			<% end %>
		<% end %>
		</div>

